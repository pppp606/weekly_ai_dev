# Environment Configuration for Promptfoo Tests

# Test Environment
TEST_ENV=development
NODE_ENV=test

# Mock Configuration
MOCK_MODE=true
MOCK_DELAY=100

# API Keys (Optional - only needed for live testing)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Test Configuration
TEST_TIMEOUT=30000
MAX_CONCURRENCY=4
VERBOSE_LOGGING=false

# Date Configuration (for mock data)
TEST_DATE=2024-01-15

# Output Configuration
GENERATE_REPORTS=true
SAVE_OUTPUT=true
OUTPUT_FORMAT=json,html

# Network Configuration (for external API testing)
REQUEST_TIMEOUT=10000
RETRY_COUNT=3
RATE_LIMIT_DELAY=1000

# CI/CD Configuration
CI=false
GITHUB_ACTIONS=false

# Debug Options
DEBUG_MOCKS=false
DEBUG_EVALUATORS=false
DEBUG_PROMPTFOO=false

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=3600

# Security Configuration
DISABLE_TELEMETRY=true
SAFE_MODE=true