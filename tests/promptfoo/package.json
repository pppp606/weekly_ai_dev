{
  "name": "weekly-ai-dev-promptfoo-tests",
  "version": "1.0.0",
  "description": "Promptfoo testing infrastructure for Weekly AI Dev digest commands",
  "type": "module",
  "scripts": {
    "test": "promptfoo eval",
    "test:watch": "promptfoo eval --watch",
    "test:specific": "promptfoo eval -c",
    "test:guardrails": "promptfoo eval -c configs/article-guardrail-review.yaml",
    "test:commands": "promptfoo eval -c configs/command-execution.yaml",
    "test:scenario": "promptfoo eval --filter",
    "test:report": "tsx scripts/generate-test-report.ts",
    "test:parallel": "promptfoo eval --max-concurrency=8",
    "test:fast": "promptfoo eval --filter='not slow'",
    "test:debug": "DEBUG=promptfoo:* promptfoo eval",
    "view": "promptfoo view",
    "clean": "tsx scripts/cleanup.ts",
    "clean:dry-run": "tsx scripts/cleanup.ts --dry-run",
    "update-mocks": "tsx scripts/update-mocks.ts",
    "update-mocks:dry-run": "tsx scripts/update-mocks.ts --dry-run",
    "verify": "node -e \"console.log('âœ… Setup verified'); process.exit(0)\"",
    "build": "tsc",
    "dev": "tsx --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "validate:config": "promptfoo eval --dry-run",
    "validate:all": "npm run type-check && npm run lint && npm run validate:config"
  },
  "dependencies": {
    "promptfoo": "^0.49.0",
    "@anthropic-ai/sdk": "^0.24.0",
    "dotenv": "^16.4.1",
    "chalk": "^5.3.0",
    "js-yaml": "^4.1.0",
    "date-fns": "^3.6.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "tsx": "^4.20.0",
    "@types/js-yaml": "^4.0.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}